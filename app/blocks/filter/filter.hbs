<div class="filters print-hidden">
  <div class="filters__container">
    <div class="grid">
      <div class="col">
        <button class="filters-btn filters__toggle filters__toggle--active">
          Show Filters
        </button>
        <button class="filters-btn filters__toggle">
          Hide Filters
        </button>
      </div>

      {{#each iter_3}}
      <div class="filter col col--1/3--md">
        {{partial 'dropdown'}}
      </div>
      {{/each}}

    </div>
  </div>
</div>

  <div class="container--full-bleed print-hidden">
    <div class="grid filters-secondary-container ">
      <div class="col">
        <div>

          <div class="filters-active is-active" data-filters-active="">
            <h2 class="heading--h6 heading--in-padded filters-active--is-empty">My filters</h2>
            <ul class="tags">

              <li class="tags__item"><a href="#" class="tags__link--close" data-filter-remove="issue1608">Arms Trade</a></li>
              <li class="tags__item filters-active--is-empty"><a href="/en/search/" class="tags__link--clear" data-filter-remove-all="">Clear all</a></li>
            </ul>
          </div>

        </div>
      </div>
      <div class="col col--1/2--md">
        <h2 class="filters__result-count heading--sub heading--in-padded" data-results-heading="">1,609 Results</h2>
      </div>
      <div class="col col--1/2 col--1/4--md">
        <label for="sort" class="sort__label">
          Sort by
        </label>
      </div>
      <div class="col col--1/2 col--1/4--md">
        <div class="sort__select custom-select">
          <select name="sort" id="sort" data-search-sort="">
            <option value="date" selected="selected">Most recent</option>
            <option value="relevance">By relevance</option>
          </select>
        </div>
      </div>
    </div>

  </div>

